<%= render 'common/errors', model: @comment %>

<%= form_for [@movie, @comment] do |f| %>
  
  <div class="form-group">
    <%= f.label :Comment %><br>
    <%= f.text_area :body, class: 'form-control'  %>
  </div>
  <div class="form-group">
    <%= f.label :Rate_from_1_to_10 %><br>
    <%= f.text_area :rating, class: 'form-control'  %>
  </div>
  <p>
    <%= f.submit %>
  </p>
<% end %>
