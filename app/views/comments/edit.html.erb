<%= render 'common/errors', model: @comment %>

<%= form_for [@movie, @comment] do |f| %>
<!-- <%= f.hidden_field :movie_id %> -->
  <div class="form-group">
    <%= f.label :commenter %>
    <%= f.text_field :commenter, class: 'form-control' %>
  </p>

  <div class="form-group">
    <%= f.label :comment %><br>
    <%= f.text_area :body, class: 'form-control' %>
  </p>

  <div class="form-group">
    <%= f.label :rate %>
    <%= f.text_field :rating, class: 'form-control' %>
  </p>

  <p>
    <%= f.submit %>
  </p>
<% end %>

<button type="button" class="btn btn-warning">
  <%= link_to 'Back', @movie %>
</button>
