<%= render 'common/errors', model: @comment %>

<%= form_for [@movie, @comment] do |f| %>
<!-- <%= f.hidden_field :movie_id %> -->

  <div class="form-group">
    <%= f.label :comment %><br>
    <%= f.text_area :body, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.label :rate %>
    <%= f.text_field :rating, class: 'form-control' %>
  </div>

  <div>
    <%= f.submit %>
  </div>
<% end %>

  <%= link_to 'Back', @movie, class: "btn btn-warning" %>
