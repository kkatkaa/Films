<% if model.errors.any? %>
  <div class="alert alert-warning" role="alert" id='error_explanation'>

    <h2>
      <%= pluralize(model.errors.count, "error") %> - Data can not be saved:
    </h2>

    <ul>
      <% model.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
    </ul>

  </div>
<% end %>
