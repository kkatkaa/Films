<div class="container-fluid">
<%= render 'common/errors', model: @movie %>
<%= form_for @movie, html: { multipart: true } do |f| %>

  <div class="form-group">
    <%= f.label :title %>
    <%= f.text_field :title, class: 'form-control' %><br>
    <%= f.label :year %>
    <%= f.text_field :year, class: 'form-control' %>
  </div>

  <div class="field">
    <%= f.label :image %>
    <%= f.file_field :image %>
  </div>

  <div class="field">
    <%= f.label :genres %>
    <%= f.collection_check_boxes :genre_ids, Genre.all, :id, :name, class: 'form-control' %>
  </div>

  <hr />

  <div class="form-group">
    <%= f.label :duration %>
    <%= f.text_field :duration, class: 'form-control' %>
  </div>

  <hr />

  <div class="form-group">
    <%= f.label :description %><br>
    <%= f.text_area :description, class: 'form-control'  %>
  </div>

  <div class="form-group">
    <%= f.label :tags %><br>
    <%= f.text_field :tags, class: 'form-control' %>
  </div>

  <p>
    <%= f.submit %>
  </p>

<% end %>
</div>
