<div class="container-fluid">
<%= render 'common/errors', model: @movie %>
<%= form_for @movie do |f| %>

  <div class="form-group">
    <%= f.label :title %>
    <%= f.text_field :tytuł, class: 'form-control' %><br>
    <%= f.label :year %>
    <%= f.text_field :rok_produkcji, class: 'form-control' %>
  </div>

  <hr />

  <div class="form-group">
    <%= f.label :duration %>
    <%= f.text_field :czas_trwania, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.label :genre %>
    <%= f.text_field :gatunek, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.label :director %>
    <%= f.text_field :reżyseria, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.label :writers %>
    <%= f.text_field :scenariusz, class: 'form-control'  %>
  </div>

  <hr />

  <div class="form-group">
    <%= f.label :description %><br>
    <%= f.text_area :opis, class: 'form-control'  %>
  </div>

  <p>
    <%= f.submit %>
  </p>

<% end %>
</div>
