<p>
<strong>Tytuł:</strong>
  <h1><%= @movie.tytuł %></h1>
  <strong>Rok produkcji:</strong>
<%= @movie.rok_produkcji %>
</p>

<p>
  <strong>Czas trwania:</strong>
  <%= @movie.czas_trwania %>
</p>

<p>
  <strong>Opis:</strong>
  <%= @movie.opis %>
</p>

<h2>Comments</h2>
<% @movie.comments.each do |comment| %>

<p>
  <strong>Commenter:</strong>
  <%= comment.commenter %>
</p>

<p>
  <strong>Comment:</strong>
  <%= comment.body %>
</p>
<% end %>

<p>
  <h2> Zostaw komentarz:</h2>
  <%= form_for([@movie, @movie.comments.build]) do |f| %>
<p><%= f.label :commenter %><br>
  <%= f.text_field :commenter %>
</p>

<p>
  <%= f.label :body %><br>
  <%= f.text_area :body %>
</p>

<p>
  <%= f.submit %>
</p>
<% end %>

<%= link_to 'Back', movies_path %>
<%= link_to 'Edit', edit_movie_path(@movie) %>
