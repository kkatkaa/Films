<p id="notice"><%= notice %></p>

<h1>Genres</h1>

<table class='table table-striped table-dark'>
  <thead>
    <tr>
      <th>Name</th>
      <th>Show</th>
      <th>Edit</th>
      <th>Delete</th>
    </tr>
  </thead>

  <tbody>
    <% @genres.each do |genre| %>
      <tr>
        <td><%= genre.name %></td>
        <td><%= link_to 'Show', genre_path(genre) %></td>
        <td><%= link_to 'Edit', edit_genre_path(genre) %></td>
        <td><%= link_to 'Delete', genre_path(genre), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<%= link_to 'To the Movies', movies_path, class: "btn btn-warning" %>
<%= link_to 'Add Genre', new_genre_path, class: "btn btn-warning" %>


